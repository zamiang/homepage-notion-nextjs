---
/**
 * Footer Component (Astro)
 * Static footer with navigation links - no client JS needed
 */

const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: '/resume.pdf', label: 'Resume', external: true },
  { href: 'https://www.instagram.com/zamiang', label: 'Instagram', external: true },
  { href: '/rss.xml', label: 'RSS' },
  { href: 'https://github.com/zamiang/homepage-notion-nextjs', label: 'Source', external: true },
];
---

<footer
  class="w-[100vw] ml-[calc(-50vw+50%)] bg-background/85 pt-8 pb-12 px-4 relative z-10"
  role="contentinfo"
>
  <div class="max-w-[680px] mx-auto">
    {/* Subtle divider */}
    <div class="w-16 h-px bg-border/50 mx-auto mb-8" aria-hidden="true"></div>

    {/* Navigation links with 44px minimum touch targets */}
    <nav aria-label="Footer navigation" class="text-center mb-4">
      <ul class="flex justify-center items-center gap-1 list-none m-0 p-0 flex-wrap">
        {
          footerLinks.map((link, index) => (
            <>
              <li>
                <a
                  class="!border-none hover:text-accent transition-colors duration-150 text-muted-foreground text-sm px-3 py-2 inline-flex items-center min-h-[44px]"
                  href={link.href}
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener' : undefined}
                >
                  {link.label}
                </a>
              </li>
              {index < footerLinks.length - 1 && (
                <li aria-hidden="true" class="text-muted-foreground/50">
                  ·
                </li>
              )}
            </>
          ))
        }
      </ul>
    </nav>

    <p class="text-center text-muted-foreground/80 text-xs m-0 bg-transparent">
      {'© '}
      <a class="!border-none hover:text-accent transition-colors duration-150 py-1" href="/">
        Brennan Moore
      </a>{' '}
      {currentYear}
    </p>
  </div>
</footer>
